fn test_int[T](mut a: T, mut b: T) where Int[T] =
    (a + b,  a - b, a * b, a / b, a % b, a >> b, a << b,
    a & b, a | b, a ^ b,
    a < b, a <= b, a > b, a >= b, a == b, a != b,
    a += b,  a -= b, a *= b, a /= b, a %= b, a >>= b, a <<= b,
    ++a, --a, b++, b--, !a, &a, *&a, ?a, $a);
    
static _ = test_int[i8 ];
static _ = test_int[i16];
static _ = test_int[i32];
static _ = test_int[i64];
static _ = test_int[u8 ];
static _ = test_int[u16];
static _ = test_int[u32];
static _ = test_int[u64];

fn test_float[T](mut a: T, mut b: T) where Float[T] =
    (a + b,  a - b, a * b, a / b, a % b,
    a < b, a <= b, a > b, a >= b, a == b, a != b,
    a += b,  a -= b, a *= b, a /= b, a %= b,
    &a, *&a, ?a, $a);

static _ = test_float[f16];
static _ = test_float[f32];
static _ = test_float[f64];

fn test_bool(mut a: bool, mut b: bool) =
    (a && b, a || b, a & b, a | b, a ^ b, a == b, a != b, !a, &a, *&a, ?a, $a);
